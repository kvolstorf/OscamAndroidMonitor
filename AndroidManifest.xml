<?xml version="1.0" encoding="utf-8"?>
<manifest 
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="streamboard.opensource.oscam"
	android:versionCode="1"
	android:versionName="1.0">
	
		<uses-permission 
			android:name="android.permission.INTERNET" />
		<uses-permission 
			android:name="android.permission.WAKE_LOCK"/>
		<uses-permission 
			android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
				
		<uses-sdk 
			android:minSdkVersion="8" 
			android:targetSdkVersion="17" />
			
		<supports-screens 
			android:normalScreens="true" 
			android:largeScreens="true"
			android:anyDensity="true"/>
		
		<application 
			android:name="MainApp" 
			android:icon="@drawable/ic_launcher_oscam_v2"
			android:label="@string/app_name" android:allowBackup="true">
			

			
				<activity 
					android:name=".OscamMonitor"
					android:label="@string/app_name">
					
				<intent-filter>
					<action android:name="android.intent.action.MAIN" />
					<category android:name="android.intent.category.LAUNCHER" />
				</intent-filter>
				
				</activity>
				
				<activity 
					android:name="SettingsPage"
					android:label="Settings">
				</activity>
				
				<activity 
					android:name="InfoPage"
					android:label="Info">
				</activity>
				
				<activity 
					android:name="ControlTabpage"
					android:label="Control">
				</activity>
				
				<activity 
					android:name="LogTabpage"
					android:label="Log">
				</activity>
				
				<activity 
					android:name="ListviewActivity">
				</activity>
		</application>
</manifest> 